        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "jwt-simple": "^0.5.6",
        "knex": "^0.18.4",
        "lodash": "^4.17.13",
        "mocha": "^6.2.0",
        "moment": "^2.29.4",
        "morgan": "^1.9.1",
        "mysql": "^2.17.1",
        "nodemon": "^1.19.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.11.0",
        "pino": "^5.13.2",
        "should": "^13.2.3",
        "supertest": "^4.0.2",
        "swagger-ui-express": "^4.1.0",
        "yamljs": "^0.3.0"
    },
